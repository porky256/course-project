{{template "admin" .}}

{{define "page-title"}}
    New Reservations
{{end}}

{{define "css"}}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" type="text/css">
{{end}}

{{define "content"}}
    <div class="col-md-12">
        {{$res := index .Data "reservations"}}

        <table class="table table-striped table-hover" id="new-reservations">
            <thead>
            <tr>
                <th>ID</th>
                <th>Full Name</th>
                <th>Room</th>
                <th>Arrival</th>
                <th>Departure</th>
            </tr>
            </thead>
            <tbody>
            {{range $res}}
                <tr>
                    <th>{{.ID}}</th>
                    <th><a href="/admin/reservations/new/{{.ID}}">
                            {{.FirstName}} {{.LastName}}
                        </a>
                    </th>
                    <th>{{.Room.Name}}</th>
                    <th>{{humanDate .StartDate}}</th>
                    <th>{{humanDate .EndDate}}</th>
                </tr>
            {{end}}

            </tbody>

        </table>


    </div>
{{end}}

{{define "js"}}
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" type="text/javascript"></script>
    <script>
        document.addEventListener("DOMContentLoaded",function () {
            const dataTable = new simpleDatatables.DataTable("#new-reservations", {
                columns: [
                    {select: 3, sort: "asc"},
                ]
            })
        })
    </script>
{{end}}